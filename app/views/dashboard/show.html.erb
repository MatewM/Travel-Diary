<div class="min-h-screen bg-white relative overflow-hidden">
  <%# === BACKGROUND IMAGE === %>
  <div class="absolute top-24 left-0 z-0 pointer-events-none opacity-[0.07]">
    <%= image_tag "logo-expats.png", class: "w-[70vw] max-w-[900px] translate-x-0 translate-y-8" %>
  </div>

  <%# === HEADER - Estilo Google Clean === %>
  <header class="border-b border-gray-200 relative z-50 bg-white/90 backdrop-blur-sm">
    <div class="max-w-screen-xl mx-auto px-6 h-24 flex items-center justify-between">

      <%# IZQUIERDA: Logo de la app (GRANDE) %>
      <div class="flex items-center gap-4">
        <%= image_tag "logo-expats.png", alt: "Travel Diary", class: "h-16 w-16 object-contain", style: "mix-blend-mode: multiply;" %>
        <span class="text-3xl font-bold text-gray-800 tracking-tight hidden sm:inline">Travel Diary</span>
      </div>

      <%# DERECHA: Avatar + Nombre + Email + Logout (Dropdown) %>
      <div class="relative" id="user-dropdown-container">
        <%# Botón disparador %>
        <button type="button" id="user-dropdown-btn"
                class="flex items-center gap-4 cursor-pointer focus:outline-none py-2 select-none">
          <div class="hidden sm:block leading-tight text-right">
            <p class="text-base font-medium text-gray-900"><%= current_user.name || "Usuario" %></p>
            <p class="text-sm text-gray-500"><%= current_user.email %></p>
          </div>

          <% if current_user.avatar_url.present? %>
            <%= image_tag current_user.avatar_url,
                alt: current_user.name || "Avatar",
                class: "w-12 h-12 rounded-full object-cover ring-2 ring-gray-100",
                referrerpolicy: "no-referrer" %>
          <% else %>
            <div class="w-12 h-12 rounded-full bg-blue-600 flex items-center justify-center text-white text-lg font-medium ring-2 ring-gray-100">
              <%= (current_user.name.presence || current_user.email).first.upcase %>
            </div>
          <% end %>

          <svg id="user-dropdown-chevron" class="w-5 h-5 text-gray-400 transition-transform duration-200"
               fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>

        <%# Menú desplegable — oculto con display:none para evitar problemas de pointer-events %>
        <div id="user-dropdown-menu"
             style="display:none"
             class="absolute right-0 top-full mt-2 w-56 bg-white rounded-lg shadow-xl border border-gray-100 py-1 z-50">

          <%# Configuración %>
          <a href="#"
             class="flex items-center px-4 py-3 text-sm text-gray-600 cursor-pointer
                    border-l-2 border-transparent
                    hover:bg-blue-50 hover:text-blue-700 hover:border-blue-400
                    transition-colors duration-150">
            <svg class="w-4 h-4 mr-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Configuración
          </a>

          <div class="border-t border-gray-100 my-1"></div>

          <%# Cerrar Sesión — link que dispara un form oculto %>
          <a href="#" id="logout-link"
             class="flex items-center px-4 py-3 text-sm text-gray-600 cursor-pointer
                    border-l-2 border-transparent
                    hover:bg-red-50 hover:text-red-600 hover:border-red-400
                    transition-colors duration-150">
            <svg class="w-4 h-4 mr-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            Cerrar sesión
          </a>
        </div>
      </div>

      <%# Formulario oculto para logout (DELETE /users/sign_out) %>
      <form id="logout-form" action="<%= destroy_user_session_path %>" method="post"
            data-turbo="false" style="display:none">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      </form>

    </div>
  </header>

  <%# === CONTENIDO PRINCIPAL === %>
  <main class="max-w-screen-xl mx-auto px-6 relative z-10">

    <%# Saludo %>
    <div class="w-full lg:w-1/2 mx-auto pt-10 pb-8 flex justify-between items-end">
      <div>
        <h1 class="text-3xl text-gray-900" style="font-weight: 400;">
          Hola, <%= current_user.name&.split(' ')&.first || current_user.email.split("@").first %>
        </h1>
        <p class="mt-2 text-base text-gray-500" style="font-weight: 400;">
          Gestiona tus viajes, billetes y recuerdos en un solo lugar.
        </p>
      </div>
      
      <%# Botón para subir billetes (abre modal o form) %>
      <button onclick="document.getElementById('upload-modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Nuevo Viaje
      </button>
    </div>

    <%# Tabla de Viajes %>
    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden mb-10 shadow-sm w-full lg:w-1/2 mx-auto">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex justify-between items-center">
        <h2 class="text-lg font-medium text-gray-900">Mis Viajes</h2>
      </div>
      
      <% if @trips.any? %>
        <div class="overflow-x-auto">
          <table class="w-full text-left text-sm text-gray-600">
            <thead class="bg-gray-50 text-xs uppercase text-gray-500 font-medium">
              <tr>
                <th class="px-6 py-3">Destino</th>
                <th class="px-6 py-3">País</th>
                <th class="px-6 py-3">Fecha Inicio</th>
                <th class="px-6 py-3">Fecha Fin</th>
                <th class="px-6 py-3">Billetes</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @trips.each do |trip| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 font-medium text-gray-900"><%= trip.destination %></td>
                  <td class="px-6 py-4"><%= trip.country %></td>
                  <td class="px-6 py-4"><%= trip.start_date&.strftime("%d %b %Y") %></td>
                  <td class="px-6 py-4"><%= trip.end_date&.strftime("%d %b %Y") %></td>
                  <td class="px-6 py-4">
                    <% if trip.tickets.attached? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= trip.tickets.count %> archivo(s)
                      </span>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center py-12 text-center">
          <svg class="w-16 h-16 text-gray-200 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="0.8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-sm text-gray-500 font-medium">No tienes viajes registrados.</p>
          <p class="text-xs text-gray-400 mt-1">Sube tus billetes para empezar a organizar tu diario.</p>
        </div>
      <% end %>
    </div>

  </main>

  <%# Modal de Subida %>
  <div id="upload-modal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" onclick="document.getElementById('upload-modal').classList.add('hidden')"></div>

      <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

      <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
              <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Registrar Nuevo Viaje</h3>
              <div class="mt-2">
                <p class="text-sm text-gray-500 mb-4">Sube tus billetes y completa los detalles del viaje.</p>
                
                <%# AÑADIDO: data: { turbo: false } para prevenir errores con Turbo Drive en subidas de archivos %>
                <%= form_with model: @trip || Trip.new, url: trips_path, local: true, multipart: true, data: { turbo: false }, class: "space-y-4" do |f| %>
                  <div>
                    <%= f.label :destination, "Destino (Ciudad)", class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :destination, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
                  </div>

                  <div>
                    <%= f.label :country, "País", class: "block text-sm font-medium text-gray-700" %>
                    <%= f.text_field :country, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
                  </div>

                  <div class="grid grid-cols-2 gap-4">
                    <div>
                      <%= f.label :start_date, "Fecha Inicio", class: "block text-sm font-medium text-gray-700" %>
                      <%= f.date_field :start_date, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
                    </div>
                    <div>
                      <%= f.label :end_date, "Fecha Fin", class: "block text-sm font-medium text-gray-700" %>
                      <%= f.date_field :end_date, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
                    </div>
                  </div>

                  <div>
                    <%= f.label :tickets, "Billetes / Archivos", class: "block text-sm font-medium text-gray-700" %>
                    <div id="drop-zone" class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md transition-colors hover:border-blue-400 cursor-pointer">
                      <div class="space-y-1 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div class="flex text-sm text-gray-600 justify-center">
                          <label for="trip_tickets" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                            <span>Sube un archivo</span>
                            <%= f.file_field :tickets, multiple: true, class: "sr-only", id: "file-input" %>
                          </label>
                          <p class="pl-1">o arrastra y suelta</p>
                        </div>
                        <p class="text-xs text-gray-500" id="file-list">PDF, PNG, JPG hasta 10MB</p>
                      </div>
                    </div>
                  </div>

                  <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                    <%= f.submit "Guardar Viaje", class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm" %>
                    <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:w-auto sm:text-sm" onclick="document.getElementById('upload-modal').classList.add('hidden')">
                      Cancelar
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Drag and Drop Logic
  const dropZone = document.getElementById('drop-zone');
  const fileInput = document.getElementById('file-input');
  const fileList = document.getElementById('file-list');

  // Prevent default drag behaviors
  ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
    dropZone.addEventListener(eventName, preventDefaults, false);
    document.body.addEventListener(eventName, preventDefaults, false);
  });

  function preventDefaults (e) {
    e.preventDefault();
    e.stopPropagation();
  }

  // Highlight drop zone when item is dragged over it
  ['dragenter', 'dragover'].forEach(eventName => {
    dropZone.addEventListener(eventName, highlight, false);
  });

  ['dragleave', 'drop'].forEach(eventName => {
    dropZone.addEventListener(eventName, unhighlight, false);
  });

  function highlight(e) {
    dropZone.classList.add('border-blue-500', 'bg-blue-50');
  }

  function unhighlight(e) {
    dropZone.classList.remove('border-blue-500', 'bg-blue-50');
  }

  // Handle dropped files
  dropZone.addEventListener('drop', handleDrop, false);

  function handleDrop(e) {
    const dt = e.dataTransfer;
    const files = dt.files;
    fileInput.files = files;
    updateFileList(files);
  }

  // Handle selected files
  fileInput.addEventListener('change', function() {
    updateFileList(this.files);
  });

  function updateFileList(files) {
    if (files.length > 0) {
      fileList.textContent = `${files.length} archivo(s) seleccionado(s)`;
      fileList.classList.add('text-blue-600', 'font-medium');
    } else {
      fileList.textContent = "PDF, PNG, JPG hasta 10MB";
      fileList.classList.remove('text-blue-600', 'font-medium');
    }
  }
  
  // Abrir file dialog al hacer click en el drop zone (fuera del label)
  dropZone.addEventListener('click', function(e) {
    if (e.target !== fileInput && e.target.tagName !== 'LABEL' && e.target.parentNode.tagName !== 'LABEL') {
      fileInput.click();
    }
  });

  // === Dropdown de usuario ===
  const dropdownContainer = document.getElementById('user-dropdown-container');
  const dropdownBtn       = document.getElementById('user-dropdown-btn');
  const dropdownMenu    = document.getElementById('user-dropdown-menu');
  const dropdownChevron = document.getElementById('user-dropdown-chevron');
  const logoutLink      = document.getElementById('logout-link');
  const logoutForm      = document.getElementById('logout-form');

  function openDropdown() {
    dropdownMenu.style.display = 'block';
    dropdownChevron.style.transform = 'rotate(180deg)';
  }

  function closeDropdown() {
    dropdownMenu.style.display = 'none';
    dropdownChevron.style.transform = 'rotate(0deg)';
  }

  function isOpen() {
    return dropdownMenu.style.display === 'block';
  }

  // Abrir / cerrar al clicar el botón
  dropdownBtn.addEventListener('click', function(e) {
    e.stopPropagation();
    isOpen() ? closeDropdown() : openDropdown();
  });

  // Cerrar al clicar fuera del menú
  document.addEventListener('click', function(e) {
    if (isOpen() && !dropdownContainer.contains(e.target)) {
      closeDropdown();
    }
  });

  // Cerrar con Escape
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') closeDropdown();
  });

  // Cerrar sesión: el link dispara el formulario oculto
  logoutLink.addEventListener('click', function(e) {
    e.preventDefault();
    logoutForm.submit();
  });
</script>