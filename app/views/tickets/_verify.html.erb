<%# Wrapper parcial: usa siempre el template principal `tickets/verify` %>
<% ticket   = local_assigns.fetch(:ticket, @ticket) %>
<% issues   = local_assigns.fetch(:issues, @issues || []) %>
<% airports = local_assigns.fetch(:airports, @airports || []) %>
<% year_src = local_assigns.fetch(:year_source, nil) %>

<%= render "tickets/verify",
           ticket: ticket,
           issues: issues,
           airports: airports,
           year_source: year_src %>
