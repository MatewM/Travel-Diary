<% _issues    = local_assigns.fetch(:issues, []) %>
<% year_source = local_assigns.fetch(:year_source, nil) %>
<%
  # Forzamos el uso de variables locales, con fallback a las del controlador si existen
  ticket = local_assigns.fetch(:ticket, @ticket)
  issues = local_assigns.fetch(:issues, @issues || []).map(&:to_sym)
  airports = local_assigns.fetch(:airports, @airports || [])
%>
<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 flex items-center justify-center p-4" data-controller="modal" data-action="click->modal#closeOutside">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-3xl max-h-[90vh] overflow-y-auto" data-modal-target="container">

      <%# Header %>
      <div class="flex items-center justify-between px-6 pt-6 pb-4 border-b border-slate-100">
        <div>
          <h3 class="text-lg font-semibold text-slate-900">Verificar billete</h3>
          <p class="text-xs text-slate-400 mt-0.5">
            Corrige los datos extraídos por la IA y confirma para guardar.
          </p>
        </div>
        <button type="button"
                data-action="click->modal#close"
                class="text-slate-400 hover:text-slate-600 transition-colors rounded-lg p-1">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

        <% if _issues.any? %>
        <%
          year_msgs = {
            "estimated"     => "El año del vuelo fue estimado automáticamente. Por favor verifica que es correcto.",
            "unknown"       => "No fue posible determinar el año con certeza. Introduce la fecha completa.",
            "weekday_match" => "El año fue deducido por el día de la semana. Por favor confírmalo.",
            "metadata_match"=> nil,
            "explicit"      => nil
          }
          year_msg = year_source.present? ? year_msgs[year_source] : nil
        %>
        <div class="mx-6 mt-4 p-3 bg-amber-50 border border-amber-200 rounded-lg space-y-1">
          <p class="text-xs font-semibold text-amber-800 flex items-center gap-1.5">
            ⚠ Revisa los campos marcados en amarillo — la IA no pudo leerlos con certeza.
          </p>
          <% if year_msg.present? && _issues.include?(:departure_datetime) %>
            <p class="text-xs text-amber-700"><%= year_msg %></p>
          <% end %>
        </div>
      <% end %>

      <%# Year warning banner (OCR year detected but different from selected_year) %>
      <% if ticket.parsed_data&.dig("year_warning") == true %>
        <% ocr_year = ticket.parsed_data&.dig("ocr_year") %>
        <% selected_year = ticket.parsed_data&.dig("selected_year") %>
        <div class="mx-6 mt-4 p-4 bg-yellow-50 border border-yellow-300 rounded-lg">
          <p class="text-sm font-semibold text-yellow-800 flex items-center gap-2 mb-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            Discrepancia en el año del vuelo
          </p>
          <p class="text-sm text-yellow-700 mb-3">
            Se detectó el año <strong><%= ocr_year %></strong> en el documento, pero estás navegando en el año <strong><%= selected_year %></strong> del dashboard.
          </p>
          <p class="text-xs text-yellow-600">
            ¿Es correcta la fecha de salida mostrada abajo? Si no lo es, ajústala manualmente antes de confirmar.
          </p>
        </div>
      <% end %>

      <%# Year warning banner (OCR year detected but different from selected_year) %>
      <% if ticket.parsed_data&.dig("year_warning") == true %>
        <% ocr_year = ticket.parsed_data&.dig("ocr_year") %>
        <% selected_year = ticket.parsed_data&.dig("selected_year") %>
        <div class="mx-6 mt-4 p-4 bg-yellow-50 border border-yellow-300 rounded-lg">
          <p class="text-sm font-semibold text-yellow-800 flex items-center gap-2 mb-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            Discrepancia en el año del vuelo
          </p>
          <p class="text-sm text-yellow-700 mb-3">
            Se detectó el año <strong><%= ocr_year %></strong> en el documento, pero estás navegando en el año <strong><%= selected_year %></strong> del dashboard.
          </p>
          <p class="text-xs text-yellow-600">
            ¿Es correcta la fecha de salida mostrada abajo? Si no lo es, ajústala manualmente antes de confirmar.
          </p>
        </div>
      <% end %>

      <%# Body — two columns %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0">

        <%# LEFT: ticket preview %>
        <% first_file = ticket.original_files.first %>
        <div class="p-4 border-b md:border-b-0 md:border-r border-slate-100 flex flex-col items-center justify-center bg-slate-50 rounded-bl-2xl min-h-96">
          <% if first_file %>
            <% if first_file.content_type.in?(%w[image/jpeg image/png]) %>
              <%= image_tag rails_blob_path(first_file, disposition: "inline"),
                    alt: first_file.filename.to_s,
                    class: "max-h-[32rem] w-full rounded-lg shadow object-contain" %>
            <% else %>
              <%# PDF placeholder %>
              <div class="w-24 h-28 bg-red-100 rounded-xl flex flex-col items-center justify-center shadow-sm">
                <svg class="w-10 h-10 text-red-400 mb-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6z"/>
                </svg>
                <span class="text-xs font-bold text-red-500 uppercase tracking-wide">PDF</span>
              </div>
              <p class="text-xs text-slate-500 mt-3 text-center break-all max-w-full px-2">
                <%= first_file.filename %>
              </p>
            <% end %>
          <% else %>
            <p class="text-sm text-slate-400">Sin archivo adjunto</p>
          <% end %>
        </div>

        <%# RIGHT: verification form %>
        <div class="p-6">
          <%= form_with model: ticket,
                url: ticket_path(ticket),
                method: :patch,
                data: { turbo_frame: "_top" },
                class: "space-y-4" do |f| %>

            <%# Mostrar errores del modelo %>
            <% if ticket.errors.any? %>
              <div class="p-3 mb-4 rounded-lg bg-red-50 text-red-700 text-sm">
                ⚠️ <%= ticket.errors.full_messages.to_sentence %>
              </div>
            <% end %>

            <%# Helper: highlight field if it has issues %>
            <% def field_classes(field_name, _issues)
                 _issues.include?(field_name.to_s) ?
                   "border-amber-400 bg-amber-50 focus:ring-amber-300" :
                   "border-emerald-300 bg-white focus:ring-emerald-200"
               end %>
            <% def field_icon(field_name, _issues)
                 _issues.include?(field_name.to_s) ? "⚠️" : "✓"
               end %>

            <%# Flight number %>
            <div>
              <%= f.label :flight_number, "Número de vuelo", class: "block text-xs font-medium text-slate-600 mb-1" %>
              <div class="flex items-center gap-2">
                <%= f.text_field :flight_number,
                      class: "flex-1 rounded-lg border px-3 py-2 text-sm focus:outline-none focus:ring-2 transition #{field_classes(:flight_number, issues)}",
                      placeholder: "ej. IB3456" %>
                <span class="text-base"><%= field_icon(:flight_number, issues) %></span>
              </div>
            </div>

            <%# Airline %>
            <div>
              <%= f.label :airline, "Aerolínea", class: "block text-xs font-medium text-slate-600 mb-1" %>
              <div class="flex items-center gap-2">
                <%= f.text_field :airline,
                      class: "flex-1 rounded-lg border px-3 py-2 text-sm focus:outline-none focus:ring-2 transition #{field_classes(:airline, issues)}",
                      placeholder: "ej. Iberia" %>
                <span class="text-base"><%= field_icon(:airline, issues) %></span>
              </div>
            </div>

            <%# Airports %>
            <div class="grid grid-cols-2 gap-3">
              <div>
                <%= f.label :departure_airport, "Origen (IATA)", class: "block text-xs font-medium text-slate-600 mb-1" %>
                <div class="flex items-center gap-1">
                  <%= f.text_field :departure_airport,
                        list: "airports_datalist",
                        maxlength: 3,
                        class: "flex-1 rounded-lg border px-3 py-2 text-sm uppercase focus:outline-none focus:ring-2 transition #{field_classes(:departure_airport, issues)}",
                        placeholder: "MAD" %>
                  <span class="text-sm"><%= field_icon(:departure_airport, issues) %></span>
                </div>
              </div>
              <div>
                <%= f.label :arrival_airport, "Destino (IATA)", class: "block text-xs font-medium text-slate-600 mb-1" %>
                <div class="flex items-center gap-1">
                  <%= f.text_field :arrival_airport,
                        list: "airports_datalist",
                        maxlength: 3,
                        class: "flex-1 rounded-lg border px-3 py-2 text-sm uppercase focus:outline-none focus:ring-2 transition #{field_classes(:arrival_airport, issues)}",
                        placeholder: "LHR" %>
                  <span class="text-sm"><%= field_icon(:arrival_airport, issues) %></span>
                </div>
              </div>
            </div>

            <%# Datalist for airport IATA codes with name hints %>
            <datalist id="airports_datalist">
              <% airports.each do |airport| %>
                <option value="<%= airport.iata_code %>"><%= airport.iata_code %> – <%= airport.name %></option>
              <% end %>
            </datalist>

            <%# Departure datetime %>
            <div>
              <%= f.label :departure_datetime, "Fecha de salida", class: "block text-xs font-medium text-slate-600 mb-1" %>
              <div class="flex items-center gap-2">
                <%= f.date_field :departure_datetime, required: false,
                      class: "flex-1 rounded-lg border px-3 py-2 text-sm focus:outline-none focus:ring-2 transition #{field_classes(:departure_datetime, issues)}" %>
                <span class="text-base"><%= field_icon(:departure_datetime, issues) %></span>
              </div>
            </div>

            <%# Actions %>
            <div class="flex justify-end gap-3 pt-2 border-t border-slate-100">
              <button type="button"
                      data-action="click->modal#close"
                      class="border border-slate-200 text-slate-700 rounded-lg px-4 py-2 text-sm font-medium hover:bg-slate-50 transition-colors">
                Cancelar
              </button>
              <%= f.submit "Confirmar y guardar",
                    class: "bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg px-4 py-2
                            text-sm font-medium transition-colors cursor-pointer" %>
            </div>

          <% end %>
        </div>

      </div>
    </div>
    </div>
<% end %>
